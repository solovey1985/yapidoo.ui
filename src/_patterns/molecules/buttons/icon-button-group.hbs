{{#each variants as |variant| }}
<h1>{{ variant.name }}</h1>
<div class="btn-group {{variant.classes}}">
    {{#each variant.buttons}}
    {{> atoms-icon-button}}
    {{/each}}
</div>
{{/each}}
<h1>Icon Button Group Custom</h1>
<div class="btn-group btn-group--column">
    {{> atoms-icon-button icon="fa fa-user" }}
    {{> atoms-icon-button class="btn--outline btn-sm" icon="fa fa-user-plus fa-2x icon--outline-bold icon--outline-circle" }}
</div>