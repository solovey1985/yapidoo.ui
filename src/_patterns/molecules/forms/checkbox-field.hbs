<div class="c-field em-c-field--checkbox {{ styleModifier }}">

	<h4 for="{{ id }}" class="c-field__label">{{ label }}</h4>

    <div class="c-field__body">

        <ul class="c-option-list">

            {{# checkboxes }}
            <li class="c-option-list__item">

                <label class="c-input-group" for="{{ id }}">
                    <input id="{{ id }}" type="checkbox" name="{{ name }}" value="{{ value }}" class="c-input-group__control em-js-checkbox-trigger" {{# checked}}checked{{/ checked }} {{# disabled }}disabled{{/ disabled }} {{# readOnly }}readonly{{/ readOnly }}>
                    <span class="c-input-group__text">{{ label }}</span>
                </label>

            </li><!-- end c-checkbox-list__item -->
            {{/ checkboxes }}

        </ul><!-- end c-option-list -->

    </div><!-- end c-field__body -->

	{{#if fieldNote }}
    <div class="c-field__note">{{{ fieldNote }}}</div>
    {{/ if }}

</div><!--end c-field-->
