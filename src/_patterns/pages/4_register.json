{
  "form": {
    "inputs": [
      {
        "label": {
          "text": "First Name"
        },
        "input": {
          "text": true,
          "type": "text",
          "placeholder": "Enter your name"
        }
      },
      {
        "label": {
          "text": "Email"
        },
        "input": {
          "text": true,
